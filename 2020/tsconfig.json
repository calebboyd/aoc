{
  "compilerOptions": {
    "target": "es2018",
    "declaration": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "lib": [
      "dom",
      "es2020"
    ],
    "outDir": "lib",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts"
  ]
}