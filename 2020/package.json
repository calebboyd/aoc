{
  "name": "2020",
  "version": "0.0.1",
  "license": "MIT",
  "main": "lib/2020",
  "files": [
    "lib",
    "!**/*.spec.js"
  ],
  "scripts": {
    "commitlint": "commitlint -f $(git rev-list --tags --max-count=1) -t $(git log --pretty=%H | head -1)",
    "lint": "eslint \"src/**/*\" --fix --ext \"*.ts\"",
    "build": "rm -rf lib && npm run lint && tsc",
    "prepublishOnly": "npm run build && npm run commitlint",
    "watch:typescript": "tsc -w",
    "watch:test": "jest --watchAll",
    "watch": "npm run build && concurrently -k \"npm:watch:typescript\" \"npm:watch:test\" -c blue,green",
    "test": "jest --passWithNoTests"
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-angular": "^11.0.0",
    "@types/jest": "^26",
    "@types/node": "^14.14.10",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "concurrently": "^5.3.0",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "~6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26",
    "typescript": "^4.1.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testPathIgnorePatterns": [".*\\.js"]    
  },
  "prettier": {
    "parser": "typescript",
    "semi": false,
    "singleQuote": true,
    "printWidth": 120
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-angular"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "build",
          "ci",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "release",
          "revert",
          "style",
          "test"
        ]
      ]
    }
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "ignorePatterns": [
      "*.d.ts"
    ],
    "overrides": [
      {
        "files": [
          "*.spec.ts"
        ],
        "env": {
          "jest": true
        }
      }
    ],
    "rules": {
      "@typescript-eslint/explicit-function-return-type": 0,
      "@typescript-eslint/no-use-before-define": 0
    }
  }
}
